<% provide(:title,"Edit post") %>
<h1>New Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3" >
    <%= form_for(@post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_area(:content,size: '1x20', class: 'form-control') %>

      <%= f.submit "Update", class: 'btn btn-primary form-control' %>




    <%  end %>

  </div>
</div>
